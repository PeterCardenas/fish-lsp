{
    "compilerOptions": {
        "outDir": "out",
        "rootDir": "src",
        "strict": true,
        "composite": true,
        "declarationMap": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "target": "es6",
        "incremental": true,
        "module": "commonJS",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "lib": [
            "es2021",
            "DOM"
        ],
        "skipLibCheck": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "removed"
    ]
}
