{
    "include": [
        "src",
        "test-data"
    ],
    "exclude": [
        "node_modules",
        "removed"
    ],
    "compilerOptions": {
        "outDir": "./lib",
        "rootDirs": [
            "src"
        ],
        "rootDir": ".",
        "strict": true,
        "composite": true,
        "declarationMap": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "target": "es6",
        "incremental": true,
        "module": "commonJS",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "lib": [
            "es2021"
        ],
        "skipLibCheck": true
    }
}
