{
    "compilerOptions": {
        "outDir": "out",
        "rootDir": "src",
        "strict": true,
        "composite": true,
        "declarationMap": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "target": "ES2022",
        "incremental": true,
        "module": "NodeNext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "lib": [
            //"es2022",
            "es2022",
            "WebWorker"
            //"DOM"
        ],
        //"downlevelIteration": true,
        "disableSizeLimit": true,
        //"fallbackPolling": "",
        "generateCpuProfile": "profile.cpuprofile",
        "extendedDiagnostics": true,
        "skipLibCheck": true,
        "baseUrl": "./",
        "paths": {
            "completion/*": ["./src/utils/completion/*"],
            "utils/*": ["./src/utils/*"],
            "tests/*": ["./test-data/*"]
        }
        //"rootDirs": [
        //    "src",
        //    "test-data"
        //]
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "removed"
    ]
}